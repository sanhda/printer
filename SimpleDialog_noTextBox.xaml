<Window
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="SimpleDialog" Height="110" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label x:Name="label" Content="Please enter the name of the ViewSet:" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#FFFF0C0C">

            </Label>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,0,0">
                <Button x:Name="OK_Button" Height="22" Content="OK" Width="100" Margin="70,0,0,0" Click="OnOK">

                </Button>
                <Button x:Name="Cancel_Button" Content="Cancel" Width="100" HorizontalAlignment="Right" Margin="10,0,0,0" Click="OnCancel">

                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
