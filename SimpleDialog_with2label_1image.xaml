<Window
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="SimpleDialog" Height="230" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image x:Name="image" Margin="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Center">
            </Image>
            <StackPanel>
            <Label x:Name="label" FontSize="18" Content="Vocabulary:" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#FFFF0C0C"/>
            <TextBlock x:Name="textblock" FontSize="18" Text="Sentence:" Foreground="#FFFF0C0C" Margin="5" TextWrapping="Wrap" Width="430">
            </TextBlock>
            </StackPanel>
        </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button x:Name="OK_Button" Height="22" Content="OK" Width="100" Margin="0" Click="OnOK" HorizontalAlignment="Center" VerticalAlignment="Center">

                </Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
